@{
    ViewBag.Title = "Index";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        .blue {
            margin: 5px;
            color: white;
            font-size: 200%;
            background-color: blue;
        }

        .red {
            margin: 5px;
            font-size: 200%;
            color: white;
            background-color: red;
        }

        .content {
            margin: 5px;
            color: white;
            font-size: 200%;
            background-color: #a700ff;
        }
    </style>
    <link href="~/Content/RWD_simple/large.css" rel="stylesheet" media="screen and (min-width: 700px )" />
    <link href="~/Content/RWD_simple/small.css" rel="stylesheet" media="screen and (max-width: 700px )" />
    <!--If the hover won't work  disable browser cache-->
</head>

<h2>Breakpoint width:700px</h2>

<div class="blue">blue-1</div>
<div class="blue">blue-2</div>
<div class="blue">blue-3</div>
<div class="flip-container" ontouchstart="this.classList.toggle('hover');">
    <div class="flipper">
        <div class="red front">hover-1</div>

        <div class="content back">hover-1-content</div>
    </div>
</div>